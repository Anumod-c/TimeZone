<!-- Start Hero Section -->



<div class="container mt-5">
    <h1 class="mb-4">Order History</h1>
    
    <% if (orders.length === 0) { %>
      <p>No orders found.</p>
    <% } else { %>
      <% orders.forEach(order => { %>
      
        
          <div class="list-group-item mb-3  eachorder">
            
            <div class="d-flex justify-content-between">
              <h6>Order ID: <%= order.orderId %></h6>
              <p style="font-size: 1.5vw;margin-top: 0.5vw;"><strong><%= order.status %>&nbsp;On&nbsp;<%= order.updatedAt.toLocaleString('en-US', {
                month: 'short',
                day: 'numeric',
                year: 'numeric',
                hour: 'numeric',
                minute: 'numeric',
                hour12: true, 
              });%></strong></p>
            </div>
            <a href="/singleorder/<%= order._id %>">
            <p style="font-size: 1.25vw;">Amount: â‚¹<%= order.totalPrice %></p>
    
          <div class="order-section">
<!-- Display order details here if needed -->
<ul class="list-group">
<% order.items.forEach(item => { %>
<li class="list-group-item d-flex align-items-center">
<!-- Product Image -->
<img src="/<%= item.productDetails.images[0] %>" alt="" style="height: 4vw; width: 4vw; margin-right: 1vw;">

<!-- Product Details -->
<div class=" d-flex">
  <p  style="font-size: 2vw;color: #3b5d50;" class="mb-0"><%= item.productDetails.name %></p>
  <p  style="margin-left: 5vw;font-size: 1vw;" class="mb-0">Qty:<%= item.quantity %></p>
</div>
</li>
<% }); %>
</ul>
</div>
          </a>
            <!-- End Order Items Section -->
          </div>
        </a>
      <% }); %>
    <% } %>
    
