    <style>
        /* Existing styles remain unchanged */

        .change-password-form {
        background-color: rgba(255, 255, 255, 0.7); /* Transparent white background */
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
    }

        .left-section {
            
            float: left;
            width: 50%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .right-section {
            float: right;
            width: 50%;
        }
        h3 {
        font-size: 44px; /* Adjust the font size as needed */
        margin-bottom: 20px; /* Add some space below the heading */
    }
    .btn {
        
            background-color: rgb(24, 153, 234);
        }
    </style>

    <title>Change Password</title>
</head>

<body>
    <!-- Header -->
    <%- include('userpartial/nav', { categories: categories }) %>

    <!-- Start Hero Section -->
    <div class="container mt-4">
        <div class="row">
            <div class="left-section">
                <!-- Change Password Heading and Points Section -->
                <h3>Change Password</h3>
                <!-- Criteria for creating a password -->
                <p>Criteria for creating a password:</p>
                <ul>
                    <li>* At least 8 characters</li>
                    <li>* At least one uppercase letter</li>
                    <li>* At least one lowercase letter</li>
                    <li>* At least one special character</li>
                </ul>
            </div>
            <div class="right-section">
                <!-- Change Password Form Section -->
                <div class="card change-password-form">
                    <div class="card-body">
                        <!-- Change Password Form -->
                        <form action="/changepassword" method="post">
                            <div class="mb-3">
                                <label for="oldPassword" class="form-label">Old Password</label>
                                <input type="password" class="form-control" id="oldPassword" name="oldPassword" required>
                                <% if(locals.olderror){ %>
                                    <div class="alter text-danger text-start"><%= olderror %></div>
                                    <% } %>
                            </div>
                            <div class="mb-3">
                                <label for="newPassword" class="form-label">New Password</label>
                                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                                <% if(locals.perror){ %>
                                    <div class="alter text-danger text-start"><%= perror %></div>
                                    <% } %>
                            </div>
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                                <% if(locals.cpasserror){ %>
                                    <div class="alter text-danger text-start"><%= cpasserror %></div>
                                    <% } %>
                            </div>
                            <button type="submit" class="btn">Change Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS and other scripts -->
    <script src="js/bootstrap.bundle.min.js"></script>
    <!-- Add other scripts as needed -->

    <!-- footer -->
    <%-include('userpartial/footer')%>
    <!-- Footer End -->

    <!-- End Footer Section -->

    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/tiny-slider.js"></script>
    <script src="js/custom.js"></script>
</body>
