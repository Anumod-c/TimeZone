            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        Add New Address
                    </div>
                    <div class="card-body">
                        <form action="/saveAddress" method="POST" class="address-form">
                            <!-- Address Fields -->
                            <div class="form-group">
                                <label for="saveas">Save as:</label>
                                <input type="text" id="saveas" name="saveas" class="form-control" required>
                                <% if(expressFlash.saveaserror){%>
                                    <div class="alter text-danger text-start"><%=expressFlash.saveaserror%></div>
                        
                                <%}%>
                            </div>
                            
                            <div class="form-group">
                                <label for="fullname">Full Name:</label>
                                <input type="text" id="fullname" name="fullname" class="form-control" required>
                                <% if(expressFlash.fullnameerror){%>
                                    <div class="alter text-danger text-start"><%=expressFlash.fullnameerror%></div>
                        
                                <%}%>
                            </div>

                            <div class="form-group">
                                <label for="adname">House Name/Flat No :</label>
                                <input type="text" id="adname" name="adname" class="form-control" required>
                                <% if(expressFlash.adnameerror){%>
                                    <div class="alter text-danger text-start"><%=expressFlash.adnameerror%></div>
                        
                                <%}%>
                            </div>

                            <div class="form-group">
                                <label for="street">Street:</label>
                                <input type="text" id="street" name="street" class="form-control">
                                <% if(expressFlash.streeterror){%>
                                    <div class="alter text-danger text-start"><%=expressFlash.streeterror%></div>
                        
                                <%}%>
                            </div>

                            <div class="form-group">
                                <label for="city">City:</label>
                                <input type="text" id="city" name="city" class="form-control" required>
                                <% if(expressFlash.cityerror){%>
                                    <div class="alter text-danger text-start"><%=expressFlash.cityerror%></div>
                        
                                <%}%>
                            </div>

                            <div class="form-group">
                                <label for="state">State:</label>
                                <input type="text" id="state" name="state" class="form-control" required>
                                <% if(expressFlash.stateerror){%>
                                    <div class="alter text-danger text-start"><%=expressFlash.stateerror%></div>
                        
                                <%}%>
                            </div>

                            <div class="form-group">
                                <label for="pincode">Pin Code:</label>
                                <input type="text" id="pincode" name="pincode" class="form-control" required>
                                <% if(expressFlash.pincodeerror){%>
                                    <div class="alter text-danger text-start"><%=expressFlash.pincodeerror%></div>
                        
                                <%}%>
                            </div>

                            <div class="form-group">
                                <label for="country">Country:</label>
                                <input type="text" id="country" name="country" class="form-control" required>
                                <% if(expressFlash.countryerror){%>
                                    <div class="alter text-danger text-start"><%=expressFlash.countryerror%></div>
                        
                                <%}%>
                            </div>
                            <div class="form-group">
                                <label for="phonenumber">Phone:</label>
                                <input type="number" id="phonenumber" name="phonenumber" class="form-control" required>
                                <% if(expressFlash.phoneerror){%>
                                    <div class="alter text-danger text-start"><%=expressFlash.phoneerror%></div>
                        
                                <%}%>
                                <% if(expressFlash.addressexsitserror){%>
                                    <div class="alter text-danger text-start"><%=expressFlash.addressexsitserror%></div>
                        
                                <%}%>
                                
                                
                            </div>

                            <button type="submit" class="btn btn-primary">Save Address</button>
                            
                        </form>
