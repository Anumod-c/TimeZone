    <style>
        .personal-details p {
            font-size: large;
            color: black;
            font-weight: 400;
        }

        .address-section {
            border: 1px solid #000000;
            min-width: 69vh;
            border-radius: 10px;
            margin-bottom: 10px;
            padding: 10px;
            
            position: relative; 
        }

        .address-box {
            border: 1px solid grey; /* Grey border for each address box */
            border-radius: 10px;
            padding: 10px;
            margin-bottom: 20px; /* Add a gap between address boxes */
        }

        .address-list {
            font-size: 12px;
            margin-bottom: 10px;
        }

        .address-list p {
            font-size: 30px;
            font-weight: 200;
            margin: 0;
        }

        .edit {
            margin-right: 20px;
        }

        .section-container {
            background-color: #ffffff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 1px;
        }

        .passwordForm {
            margin-top: 12vh;
        }

        @media (min-width: 768px) {
            .section-half {
                flex: 0 0 calc(50% - 15px);
                margin-right: 30px;
                margin-bottom: 20px;
            }

            #lineone {
                min-height: 50vh;
            }

            .section-container {
                background-color: #ffffff;
                padding: 20px;
                margin-bottom: 20px;
                border-radius: 10px;
            }
        }

        .category-options {
            display: none;
        }
        .btn.btn-delete {
            background-color: #dc3545;
            color: white;
}
    

       

        .btn {
            background-color: rgb(24, 153, 234);
        }
    </style>

    <title>Document</title>
</head>

<body>
    <!-- header -->
    <%-include('userpartial/nav',{categories:categories})%>
    <!-- Start Hero Section -->

    <div class="container mt-4">
        <div class="row">
            <!-- User Details Section -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        User Details
                    </div>
                    <div class="card-body">
                        <p><strong>FirstName:</strong> <%= userData.firstname %></p>
                        <p><strong> LastName:</strong> <%= userData.lastname %></p>
                        <p><strong>Email:</strong> <%= userData.email %></p>
                        <% if (userData.gender) { %>
                        <p><strong>Gender:</strong> <%= userData.gender %></p>
                        <% } else { %>
                        <p><strong>Gender:</strong> N/A</p>
                        <% } %>
                        <% if (userData.age) { %>
                        <p><strong>Age:</strong> <%= userData.age %></p>
                        <% } else { %>
                        <p><strong>Age:</strong> N/A</p>
                        <% } %>
                        <p><strong>Phone:</strong> <%= userData.phone %></p>
                        <a href="/editprofile" class="btn">Edit Profile</a>
                        <a href="/pswdmanagement" class="btn">Manage Password</a>
                    </div>
                </div>
            </div>

<!-- Address Section -->
<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            Address
        </div>
        <div class="card-body">
            <% if (userData.address.length > 0) { %>
                <% userData.address.forEach(function(addr) { %>
                    <div class="address-box text-center">
                        <p><strong>Save As:</strong> <%= addr.saveas %></p>
                        <p><strong>Street:</strong> <%= addr.street %></p>
                        <p><strong>City:</strong> <%= addr.city %></p>
                        <p><strong>State:</strong> <%= addr.state %></p>
                        <p><strong>Pincode:</strong> <%= addr.pincode %></p>
                        <!-- Edit and delete buttons with actual address ID -->
                        <a href="/editAddress/<%= addr._id %>" class="btn btn-primary">Edit Address</a>
                        <a href="/deleteAddress/<%= addr._id %>" class="btn btn-delete">Delete Address</a>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No address added yet.</p>
            <% } %>
            
        </div>
        <div class="card-footer text-center">
            <!-- Add New Address button -->
            <a href="/addnewaddress" class="btn">Add New Address</a>
        </div>
    </div>
</div>

        </div>
    </div>

    <!-- Bootstrap JS and other scripts -->
    <script src="js/bootstrap.bundle.min.js"></script>
    <!-- Add other scripts as needed -->

    <!-- footer -->
    <%-include('userpartial/footer')%>
